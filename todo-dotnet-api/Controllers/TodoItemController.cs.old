using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Mvc;
using todo_api.Models;
using todo_api.Services.TodoItemService;

namespace todo_api.Controllers{

  [ApiController]
  [Route("todo")]
  public class TodoItemController:ControllerBase{
    private readonly ITodoItemService _todoItemService;
    // service is injected into controller
    // in the constructor (here below)
    // use ctor shortcut to generate construction function
    public TodoItemController(ITodoItemService todoItemService)
    {
      _todoItemService = todoItemService;
    }
    // GET /todo/{listId}
    [HttpGet("{lid}")]
    public async Task<ActionResult<List<TodoItem>>> GetAll(int lid){
      return Ok(await _todoItemService.GetAll(lid));
    }

    // GET /todo/{lid}/{id}
    [HttpGet("{lid}/{id}")]
    public async Task<ActionResult<TodoItem>> GetTodoItemById(int lid, int id){
      return Ok(await _todoItemService.GetTodoItemById(lid,id));
    }

    // POST /todo
    [HttpPost]
    public async Task<ActionResult<TodoItem>> AddTodoItem(NewTodoItem newItem){
      // return
      return Ok(await _todoItemService.AddTodoItem(newItem));
    }

    // PUT /todo
    [HttpPut]
    public async Task<ActionResult<TodoItem>> UpdateTodoItem(TodoItem updateItem){
      // return
      return Ok(await _todoItemService.UpdateTodoItem(updateItem));
    }

    // DELETE
    [HttpDelete("{id}")]
    public async Task<ActionResult<TodoItem>> DeleteTodoItem(int id){
      // return
      return Ok(await _todoItemService.DeleteTodoItem(id));
    }
  }
}